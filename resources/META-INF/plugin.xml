<idea-plugin version="2">
  <id>eu.osimowicz.plugins.intellij.CodeBlocksSorter</id>
  <name>Code blocks sorter</name>
  <version>0.1.0</version>
  <vendor email="grzegorz@osimowicz.eu" url="http://www.osimowicz.eu">YourCompany</vendor>

  <description><![CDATA[
      Sort your code by each code block first letter (sort only first level of blocks)
    ]]></description>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>


  <actions>
      <action id="eu.osimowicz.plugins.intellij.CodeBlocksSorterAction"
              class="eu.osimowicz.plugins.intellij.CodeBlocksSorterAction" text="Sort Code Blocks"
              description="Sort code blocks (find modules with smallest indentation and sort by its names">
        <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        <add-to-group group-id="CodeMenu"/>
        <keyboard-shortcut first-keystroke="alt shift L" keymap="#default"/>
      </action>
  </actions>

</idea-plugin>